<div class='booyah-box'>
	<div class='row'>
		<div class='col-4'>
			<%= image_tag 'user.png', alt: "user icon" %>
		</div>
		<div class='col-8'>

			h1> <%= @user.email %> </h1>
			<p>
				Member since: <%= @user.created_at.strftime("%B %d, %y") %>
			</p>
			<p>
				<%= @user.comments.count %> total comments
			</p>
			<p>
				<%= @user.comments.where(rating: '5_stars').count %> total 5 star reviews
			</p>
		</div>
	  <div class="clear"></div>
	</div>
